-- Create a function to safely return SMTP configuration
create or replace function get_smtp_config()
returns json
language plpgsql
security definer
as $$
begin
  return (
    select json_build_object(
      'smtp_enabled', current_setting('auth.email.smtp.enabled', true),
      'smtp_host', current_setting('auth.email.smtp.host', true),
      'smtp_port', current_setting('auth.email.smtp.port', true),
      'smtp_user', current_setting('auth.email.smtp.user', true),
      'smtp_sender', current_setting('auth.email.smtp.sender_name', true),
      'smtp_admin_email', current_setting('auth.email.smtp.admin_email', true)
    )
  );
end;
$$; 